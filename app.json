{
  "expo": {
    "name": "Chart Analyzer",
    "slug": "chartbot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chartanalyzer.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to capture candlestick charts for pattern analysis."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.chartanalyzer.app",
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Chart Analyzer to access your camera to capture candlestick charts."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "1aa53d21-b686-4080-8884-b6bb1aa0ab8a"
      }
    },
    "owner": "bkbots"
  }
}
